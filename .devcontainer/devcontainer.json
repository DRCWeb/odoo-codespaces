{
    "name": "Odoo 15 Enterprise",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "workspaceFolder": "/workspaces/odoo-codespaces/.devcontainer/container/",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-azuretools.vscode-docker",
                "formulahendry.docker-explorer"
                
            ]
        }
    },
    "hostRequirements": {
        "cpus": 4,
        "memory": "16gb",
        "storage": "32gb"
    },
    "remoteEnv": {
        "ODOO_ENTERPRISE_TOKEN": "${{ secrets.ODOO_ENTERPRISE_TOKEN }}"
    }
}
