{
    "name": "Odoo 15 Enterprise",
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu",  // O puedes usar ":alpine" para una imagen m√°s ligera
    "workspaceFolder": "/workspaces/odoo-codespaces",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-azuretools.vscode-docker",
                "formulahendry.docker-explorer"
            ]
        }
    },
    "hostRequirements": {
        "cpus": 4,
        "memory": "16gb",
        "storage": "32gb"
    },
    "remoteEnv": {
        "ODOO_ENTERPRISE_TOKEN": "${localEnv:ODOO_ENTERPRISE_TOKEN}"
    }
}